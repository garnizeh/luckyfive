# LuckyFive API Configuration
# Copy this file to .env and adjust values for your environment

# Server Configuration
# Host where the API server will bind
SERVER_HOST=localhost
# Port where the API server will listen
SERVER_PORT=8080

# Database Configuration
# SQLite database file paths (relative to project root)
DB_RESULTS_PATH=data/results.db
DB_SIMULATIONS_PATH=data/simulations.db
DB_CONFIGS_PATH=data/configs.db
DB_FINANCES_PATH=data/finances.db

# Logging Configuration
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Worker Configuration
# Number of concurrent workers for background processing
WORKER_CONCURRENCY=4
